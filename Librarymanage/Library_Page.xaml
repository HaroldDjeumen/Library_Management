<Page x:Class="Librarymanage.Library_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Librarymanage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Library_Page">

    <Grid Background="#F7F9F8" Margin="0,0,10,5">
        <!-- Changed 'Padding' to 'Margin' as Grid does not support 'Padding' -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <!-- Book Gallery -->
            <ColumnDefinition Width="3*" />
            <!-- Book Details -->
        </Grid.ColumnDefinitions>

        <!-- Book List -->
        <ScrollViewer x:Name="bookPanel" Grid.Column="0" Background="White" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="BooksPanel" Margin="10" />
        </ScrollViewer>

        <!-- Book Details -->
        <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="10" BorderBrush="#4B0082" BorderThickness="2">
            <StackPanel x:Name="BookDetailsPanel" Visibility="Collapsed">

                <!-- Book Cover -->
                <Image x:Name="BigCoverImage" Width="250" Height="350" Margin="0,0,0,20" />

                <!-- Book Title -->
                <TextBlock x:Name="BookTitle" FontSize="30" FontWeight="Bold" Foreground="#4B0082" Margin="0,0,0,10" TextWrapping="Wrap" />

                <!-- Book Author -->
                <TextBlock x:Name="BookAuthor" FontSize="20" FontStyle="Italic" Margin="0,0,0,5" Foreground="Black" />

                <!-- Book Release Date -->
                <TextBlock x:Name="BookReleaseDate" FontSize="18" Margin="0,0,0,5" Foreground="Black" />

                <!-- Book ISBN -->
                <TextBlock x:Name="BookISBN" FontSize="18" Margin="0,0,0,5" Foreground="Black" />

                <!-- Book Summary -->
                <TextBlock x:Name="BookSummary" FontSize="18" TextWrapping="Wrap" Margin="0,10,0,0" Foreground="Black" />
            </StackPanel>
        </Border>
    </Grid>

</Page>
