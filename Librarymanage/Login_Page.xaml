<Page x:Class="Librarymanage.Login_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Librarymanage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login_Page">

    <Grid Background="#E6E6FA" Margin="20">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Username" Margin="0,5,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="30"/>

            <TextBlock Text="Password" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordTextBox" Height="30"/>

            <Button Content="Login" Background="#9370DB" Foreground="White" Height="35"
                    Margin="0,20,0,0" Click="LoginButton_Click"/>

            <Button Content="Go to Signup" Background="Transparent" Foreground="Blue"
                    Margin="0,10,0,0" BorderThickness="0" Click="SignupButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
