<Page x:Class="Librarymanage.Login_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Librarymanage"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Login_Page">

    <Grid Background="#E6E6FA">
        <!-- Centering Container -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="White" CornerRadius="15" Padding="30" Width="400" 
                BorderBrush="#9370DB" BorderThickness="2">

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <!-- Page Title -->
                    <TextBlock Text="Login" FontSize="36" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#4B0082" Margin="0,0,0,20"/>

                    <!-- Username Field -->
                    <TextBlock Text="Username" Margin="0,5,0,5" FontSize="14"/>
                    <TextBox x:Name="UsernameTextBox" Height="35" FontSize="16" />

                    <!-- Password Field -->
                    <TextBlock Text="Password" Margin="0,15,0,5" FontSize="14"/>
                    <PasswordBox x:Name="PasswordTextBox" Height="35" FontSize="16" Width="277"/>

                    <!-- Login Button -->
                    <Button Content="Login" Background="#9370DB" Foreground="White" Height="40" 
                        FontSize="16" FontWeight="Bold" Margin="0,25,0,0" Click="LoginButton_Click" 
                        Cursor="Hand" BorderThickness="0" />

                    <!-- Go to Signup Button -->
                    <Button Content="Go to Signup" Background="Transparent" Foreground="#4B0082" 
                        BorderThickness="0" FontSize="14" Margin="0,10,0,0" Click="SignupButton_Click" 
                        Cursor="Hand" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
