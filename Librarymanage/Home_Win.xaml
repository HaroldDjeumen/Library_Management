<Page x:Class="Librarymanage.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Librarymanage"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <!-- Soft Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#E6E6FA" Offset="0" />
                <GradientStop Color="#E6E6FA" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Centered Card -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBox FontFamily="Segoe MDL2 Assets" Text="&#xE82D;" FontSize="70" IsReadOnly="True" BorderThickness="0" Background="Transparent"  Foreground="#4B0082"  Width="100" Height="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,20"/>

                <!-- Title -->
                    <TextBlock Text="Down Town Library"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="#4B0082"
                           TextAlignment="Center"
                           Margin="0,0,0,30" />

                    <!-- Login Button -->
                    <Button x:Name="Login_btn" Content="Login"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#9370DB"
                        Width="220" Height="50"
                        BorderThickness="0"
                        Click="Login_Click"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Padding="5" />

                    <!-- Signup Button -->
                    <Button x:Name="signup_btn" Content="Register"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#9370DB"
                        Width="220" Height="50"
                        BorderThickness="0"
                        Click="SignUp_Click"
                        Cursor="Hand"
                        Padding="5" />
                </StackPanel>
            
        </Grid>
    </Grid>
</Page>
