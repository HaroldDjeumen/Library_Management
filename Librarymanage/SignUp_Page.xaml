<Page
    x:Class="Librarymanage.SignUp_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Librarymanage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SignUp_Page"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#E6E6FA">
        <!--  Centering Container  -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border
                Width="400"
                Height="600"
                Padding="10"
                Background="White"
                BorderBrush="#9370DB"
                BorderThickness="2"
                CornerRadius="15">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <!--  Page Title  -->
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="36"
                        FontWeight="Bold"
                        Foreground="#4B0082"
                        Text="Sign-up" />

                    <!--  Username Field  -->
                    <TextBlock
                        Margin="0,5,0,5"
                        FontSize="14"
                        Text="Username" />
                    <TextBox
                        x:Name="UsernameTextBox"
                        Width="260"
                        Height="35"
                        FontSize="16"
                        Style="{StaticResource ModernTextbox}"
                        Tag="Ex. Harold_D" />

                    <!--  Email Field  -->
                    <TextBlock
                        Margin="0,15,0,5"
                        FontSize="14"
                        Text="Email" />
                    <TextBox
                        x:Name="EmailTextBox"
                        Height="35"
                        FontSize="16"
                        Style="{StaticResource ModernTextbox}"
                        Tag="Ex. Harolddjeumen@gmail.com" />

                    <!--  Password Field  -->
                    <TextBlock
                        Margin="0,15,0,5"
                        FontSize="14"
                        Text="Password" />
                    <PasswordBox
                        x:Name="PasswordTextBox"
                        Height="35"
                        FontSize="16"
                        Style="{StaticResource ModernPasswordbox}" />



                    <!--  Confirm Password Field  -->
                    <TextBlock
                        Margin="0,15,0,5"
                        FontSize="14"
                        Text="Confirm Password" />
                    <PasswordBox
                        x:Name="ConfirmPasswordTextBox"
                        Height="35"
                        FontSize="16"
                        Style="{StaticResource ModernPasswordbox}" />

                    <!--  Confirm Password Field  -->
                    <TextBlock
                        Margin="0,15,0,5"
                        FontSize="14"
                        Text="Phone Number" />
                    <TextBox
                        x:Name="PhoneTextBox"
                        Height="35"
                        FontSize="16"
                        Style="{StaticResource ModernTextbox}"
                        Tag="Ex. 076 435 1234" />

                    <!--  Signup Button  -->
                    <Button
                        Height="40"
                        Margin="0,25,0,0"
                        Background="#9370DB"
                        BorderThickness="0"
                        Click="SignupButton_Click"
                        Content="Sign-up"
                        Cursor="Hand"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White" />

                    <!--  Go to Login Button  -->
                    <Button
                        Margin="0,10,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="LoginButton_Click"
                        Content="Go to Login"
                        Cursor="Hand"
                        FontSize="14"
                        Foreground="#4B0082" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
